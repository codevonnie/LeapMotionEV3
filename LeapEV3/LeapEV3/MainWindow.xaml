<Window x:Class="LeapEV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapEV3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="Ports"/>
            <Button x:Name="Connect" Click="Connect_Click">Connect</Button>
            <Button x:Name="Disconnect" Click="Disconnect_Click">Disconnect</Button>
        </StackPanel>
        <TextBox x:Name="Output"/>
        <TextBox x:Name="MotorOutput" Height="29"/>
    </StackPanel>

</Window>
