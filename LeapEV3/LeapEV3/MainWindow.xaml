<Window x:Class="LeapEV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapEV3"
        mc:Ignorable="d"
        Title="Lego EV3" Height="170.8" Width="225" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
        <Button x:Name="Connect" Click="Connect_Click" Width="110" Background="#FF33E321" FontSize="20">Connect</Button>
        <Button x:Name="Disconnect" Click="Disconnect_Click" Content="Disconnect" Width="110" Background="#FFD41744" FontSize="20"/>
    </StackPanel>
        <TextBox x:Name="Output"/>
    </StackPanel>
</Window>
